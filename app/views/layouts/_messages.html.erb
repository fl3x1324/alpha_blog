<div class="container">
  <% flash.each do |key, msg| %>
    <div class="alert <%= key == "notice" ? "alert-success" : "alert-warning" %>  alert-dismissible fade show" role="alert">
      <%= msg %>
      <button class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>