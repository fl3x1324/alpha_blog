<div class="container">
  <% if @article.errors.any? %>
    <h3>You have validation errors:</h3>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Put your text for title here" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 12, class: "form-control shadow rounded", placeholder: "Put your text for description here" %>
          </div>
        </div>
        <div class="form-group row justify-content-center mt-5">
          <%= f.submit class: "btn btn-lg btn-outline-light" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and go back to articles list ]", articles_path, class: "text-info" %>
  </div>
</div>